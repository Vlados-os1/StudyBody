app/
├── api/
│   ├── auth.py             # роуты и контроллеры для аутентификации
│   ├── users.py            # роуты и контроллеры для работы с пользователями
├── core/
│   ├── configs/
│   │   └── config.py       # конфигурации через pydantic
│   ├── security.py         # парольный хэшинг, верификация
│   ├── jwt.py              # формирование и проверка JWT
│   └── errors.py           # кастомные исключения
├── models/
│   ├── user.py             # ORM модели пользователей
│   └── token.py            # ORM модели токенов (blacklist)
├── schemas/
│   ├── user.py             # Pydantic схемы пользователя
│   ├── jwt.py              # Схемы токенов и ответов
│   └── mail.py             # Схемы для email связанной логики
├── services/
│   ├── auth_service.py     # логика регистрации, логина, токенов
│   ├── user_service.py     # обновление профиля, поиск пользователей
│   └── mail_service.py     # создание и отправка email сообщений
├── celery/
│   ├── celery_config.py
│   ├── celery_beat_schedule.py
│   └── tasks/
│       ├── mail_tasks.py
│       └── cleanup_tasks.py
├── database/
│   ├── database.py         # инициализация async engine и сессии
│   └── migrations/
├── dependencies.py         # зависимости для FastAPI (например, get_db)
├── exceptions.py           # обработка http ошибок (Forbidden, NotFound, etc)
└── main.py                 # запуск FastAPI приложения
